@using Gui.Events
@inject IEventService EventService

@code {
    protected override void OnInitialized()
    {
        EventService.OnQuerySearch += HandleQuerySearch;
    }

    private void HandleQuerySearch(string query)
    {
        Console.WriteLine("List: " + query);
    }

    public void Dispose()
    {
        EventService.OnQuerySearch -= HandleQuerySearch;
    }
}